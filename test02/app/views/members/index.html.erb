<% if @members.present? %>
<table border="1">
  <tr>
    <th>ID</th>
    <th>ユーザー名</th>
    <th>パスワード</th>
    <th>メールアドレス</th>
    <th>電話番号</th>
    <th>性別</th>
    <th>誕生日</th>
    <th>操作</th>
  </tr>
  <% @members.each do |member| %>
  <tr>
    <td style="text-align: right"><%= member.id %></td>
    <td style="text-align: right"><%= member.name %></td>
    <td style="text-align: right"><%= member.password %></td>
    <td style="text-align: right"><%= member.email %></td>
    <td style="text-align: right"><%= member.tel %></td>
    <td style="text-align: right"><%= member.gender %></td>
    <td style="text-align: right"><%= member.birthday %></td>
    <td>
      <%= link_to "編集", [:edit, member] %> |
      <%= link_to "削除", member, method: :delete, data: { confirm: "本当に削除しますか?" } %>
    </td>
  </tr>
  <% end %>
</table>
<% else %>
<p>会員情報がありません。</p>
<% end %>


<% @members.each do |item| %>
  <p><%= item %></p>
<% end %>
