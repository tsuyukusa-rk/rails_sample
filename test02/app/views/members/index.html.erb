<h1><%= @page_title %></h1>

<%= form_tag :search_members, method: :get do %>
  <p><%= text_field_tag 'q', params[:q] %> <%= submit_tag '検索' %></p>
<% end %>

<p><%= link_to '新規登録', :new_member %></p>

<% if @members.present? %>
<table border="1">
  <tr>
    <th>ID</th>
    <th>ユーザー名</th>
    <th>パスワード</th>
    <th>メールアドレス</th>
    <th>電話番号</th>
    <th>性別</th>
    <th>誕生日</th>
    <th>郵便番号</th>
    <th>住所</th>
    <th>操作</th>
  </tr>
  <% @members.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= link_to item.name, item %></td>
    <td><%= item.password %></td>
    <td><%= item.email %></td>
    <td><%= item.tel %></td>
    <td><%= item.gender %></td>
    <td><%= item.birthday %></td>
    <td><%= item.postalCode %></td>
    <td><%= item.address %></td>
    <td>
      <%= link_to "編集", [:edit, item] %> |
      <%= link_to "削除", item, method: :delete, data: { confirm: "本当に削除しますか?" } %>
    </td>
  </tr>
  <% end %>
</table>
<% else %>
<p>会員情報がありません。</p>
<% end %>


<% @members.each do |item| %>
  <p><%= item %></p>
<% end %>

